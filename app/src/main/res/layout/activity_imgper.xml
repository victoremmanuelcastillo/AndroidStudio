<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convertir Imagen a Base64"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            android:contentDescription="Imagen seleccionada"/>

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnEncodeToBase64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codificar a Base64"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnDecodeFromBase64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decodificar de Base64"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnSendWithVolley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar con Volley"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado aparecerá aquí"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#F5F5F5"
            android:maxLines="5"
            android:scrollbars="vertical"/>

    </LinearLayout>

</ScrollView>
